<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TomskGO.Themes.DarkTheme">
    <Color x:Key="shellBackgroundColor">#121212</Color>
    <Color x:Key="cardBackgroundColor">#1E1E1E</Color>
    <Color x:Key="themeBackgroundColor">#121212</Color>
    <Color x:Key="themeTextColor">WhiteSmoke</Color>
    <Color x:Key="themeTextSecondaryColor">GhostWhite</Color>
    <Color x:Key="themeTextCaptionColor">White</Color>
    <Color x:Key="themeBoxViewColor">#1E1E1E</Color>
    <x:String x:Key="themeSwitchIcon">sun.png</x:String>
    <FontImageSource x:Key="backBtn" Glyph="&#xe7ea;" Color="White">
        <FontImageSource.FontFamily>
            <OnPlatform x:TypeArguments="x:String">
                <On Platform="iOS" Value="SegoeMDL2" />
                <On Platform="Android" Value="SegoeMDL2.ttf#Segoe MDL2 Assets" />
            </OnPlatform>
        </FontImageSource.FontFamily>
    </FontImageSource>
</ResourceDictionary>